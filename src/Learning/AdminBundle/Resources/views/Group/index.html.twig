{% extends 'LearningFrontBundle::layout.html.twig' %}


{% block title %} Main page {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="wrap">
        <div class="container main-container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    {#<div class="navbar-header">#}
                    {#<a class="navbar-brand" href="#">#}
                    {#<img alt="learning" src="">#}
                    {#</a>#}
                    {#</div>#}

                    <div class="pull-left">
                        <a class="navbar-brand" href="#">Admin panel</a>
                    </div>

                    <div class="pull-right">
                        <a class="btn btn-default navbar-btn"  href="{{ path('_admin_homepage') }}">
                            Settings
                        </a>
                    </div>
                </div>
            </nav>


            <table class="table table-bordered table-groups">
                <div class="caption">
                    <h3>Groups</h3>
                    <p><a href="#" class="btn btn-success" role="button">Add</a></p>

                    {{ form(groupForm) }}
                </div>
                <thead>
                  <tr>
                      <th>#</th>
                      <th>Name</th>
                      <th>Roles</th>
                      <th>Edit</th>
                  </tr>
                  </thead>
                <tbody>
                  {% for group in groups %}
                    <tr>
                       <th scope="row">{{ group.Id }}</th>
                       <td class="bg-warning">{{ group.Name }}</td>
                       <td class="bg-success">
                           {% for role in group.roles %}
                              <span >{{ role }}</span>
                           {% endfor %}
                       </td>
                       <td>
                           <a href="" class="btn btn-default glyphicon glyphicon-pencil"></a>
                           <a href="{{ path('_admin_group_remove', { id: group.id }) }}" class="btn btn-default glyphicon glyphicon-remove"></a>
                       </td>
                    </tr>
                  {% endfor %}
                </tbody>
            </table>

