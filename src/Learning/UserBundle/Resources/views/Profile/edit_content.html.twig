                                <a href="{{ path('fos_user_profile_edit') }}" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
                            <li class="{{ (route == '_profile_messages') ? 'active' : '' }}">
                                <a href="{{ path('_profile_messages') }}" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
                            <li class="{{ (route == '_profile_settings') ? 'active' : '' }}">
                                <a href="{{ path('_profile_settings') }}" aria-controls="settings" role="tab" data-toggle="tab">Settings</a>
                            </li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
